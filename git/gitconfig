[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[user]
	email = tom@bere.al
	name = Tom Speak
[push]
  default = simple
[alias]
  a = add
  aa = add .
  co = checkout
  ci = commit
  cim = commit -m
  ca = commit -a --amend
  cp = cherry-pick
  rc = rebase --continue
  rs = rebase --skip
  ra = rebase --abort
  rh = "!f() { git rebase -i HEAD~$1; }; f"
  rr = rebase -i --root
  p = push
  pf = push --force-with-lease
  pu = "!f() { git push --set-upstream origin `git rev-parse --abbrev-ref HEAD`; }; f"
  d = diff --color-words
  s = status
  st = status --short --branch
  b = branch
  br = "!f() { git branch --sort=-committerdate | fzf --header 'Checkout Recent Branch' --preview 'git diff --color=always {1}' --pointer='>' | xargs git checkout; }; f"
  newb = checkout -b
  plum = pull upstream main
  rum = pull --rebase upstream main
  rom = pull --rebase origin main
  sur = submodule update --remote
  l = log --pretty=format:"%C(green)%h%C(bold)%d\\ %Creset%s%C(white)\\ [%cn]" --decorate --numstat
  l1 = log --pretty=oneline
  lp = log --all --graph --decorate --oneline --simplify-by-decoration
  fuck = reset HEAD^
  loc = "!f(){ git ls-files | egrep \"$1\" | if [ -n \"$2\" ]; then egrep -v \"$2\"; else cat; fi | xargs wc -l; }; f"
  cstats = shortlog -sn
  pr = "!f(){ git pu && gh pr create --web; }; f"
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[credential]
  helper = osxkeychain
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[merge]
  conflictstyle = diff3 
[diff]
    colorMoved = default
[help]
  autocorrect = 1
[url "git@github.com:"]
	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
