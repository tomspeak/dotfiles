[advice]  # disable advices
    addEmptyPathspec = false
    pushNonFastForward = false
    statusHints = false

[blame]
    coloring = highlightRecent
    date = relative

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[user]
	email = tomspeak@users.noreply.github.com
	name = tom speak
[core]
  editor = nvim
	pager = diff-so-fancy | less --tabs=4 -RF
	excludesfile = ~/.gitignore_global
[push]
  default = simple
[alias]
  a = add
  aa = add .
  co = checkout
  ci = commit
  cim = commit -m
  ca = commit -a --amend
  cp = cherry-pick
  rc = rebase --continue
  rs = rebase --skip
  ra = rebase --abort
  rh = "!f() { git rebase -i HEAD~$1; }; f"
  rr = rebase -i --root
  p = push
  pf = push --force-with-lease
  pu = "!f() { git push --set-upstream origin `git rev-parse --abbrev-ref HEAD`; }; f"
  d = diff --color-words
  s = status
  st = status --short --branch
  b = branch
  br = "!f() { git branch --sort=-committerdate | fzf --header 'Checkout Recent Branch' --preview 'git diff --color=always {1}' --pointer='>' | xargs git checkout; }; f"
  newb = checkout -b
  plum = pull upstream main
  rum = pull --rebase upstream main
  rom = pull --rebase origin main
  sur = submodule update --remote
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
  l1 = log --pretty=oneline
  lp = log --all --graph --decorate --oneline --simplify-by-decoration
  fuck = reset HEAD^
  loc = "!f(){ git ls-files | egrep \"$1\" | if [ -n \"$2\" ]; then egrep -v \"$2\"; else cat; fi | xargs wc -l; }; f"
  cstats = shortlog -sn
  pr = "!f(){ git pu && gh pr create --web; }; f"
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[credential]
  helper = osxkeychain
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[diff]
  colorMoved = default
	algorithm = histogram
	submodule = log
	context = 10
  renames = copies
[help]
	autocorrect = 10
[url "git@github.com:"]
	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[commit]
	verbose = true
[rerere]
	enabled = true
[status]
	submoduleSummary = true
  branch = true
  short = true
  showStash = true
  showUntrackedFiles = all  # show individual untracked files
[submodule]
	recurse = true
[branch]
	sort = -committerdate
[fetch]
	prune = true
	prunetags = true
[log]
	date = iso
[rebase]
	updateRefs = true
[pager]
    branch = false  # no need to use pager for git branch
[interactive]
    diffFilter = diff-so-fancy --patch
    singlekey = true
[diff-so-fancy]
    markEmptyLines = false
