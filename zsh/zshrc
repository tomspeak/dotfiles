export DOTFILES="$HOME/dotfiles"
export ZSH=$HOME/.oh-my-zsh
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/sbin:$PATH

PURE_PROMPT_SYMBOL="‚ùç "

# execute locally installed npm modules
export PATH="./node_modules/.bin:$PATH"

# put things in ~/.bin into my $PATH
export PATH="$HOME/.bin:$PATH"

TZ="Europe/London"
HISTFILE=$HOME/.zhistory
HISTSIZE=20000
SAVEHIST=20000
setopt HIST_IGNORE_SPACE
HOSTNAME="`hostname`"
PAGER='less'
export AUTOENV_FILE_ENTER=".env"
DEFAULT_USER="t"
unsetopt correct
unsetopt correctall
DISABLE_CORRECTION="true"

GIT_MERGE_AUTOEDIT=no
export GIT_MERGE_AUTOEDIT

# the one true way
export EDITOR='vim'
export VEDITOR='code'

# heroku toolbelt
export PATH="/usr/local/heroku/bin:$PATH"

export GOROOT=/usr/local/opt/go/libexec
export GOPATH=$HOME/Sites/go
export PATH=$PATH:$GOROOT/bin:$GOPATH/bin

# so autoenv runs all the time, even when you open a tmux split
cd .

source $ZSH/oh-my-zsh.sh
source $HOME/dotfiles/zsh/aliases
source $HOME/dotfiles/zsh/functions
source ~/.zsh_plugins.sh

#FZF
# Setting ag as the default source for fzf
export FZF_DEFAULT_COMMAND='ag -g ""'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

source $HOME/dotfiles/zsh/fzf-gh/*

plugins=(git npm osx tmux tig vagrant node)

source <(antibody init)

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
