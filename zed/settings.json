// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "languages": {
    "HTML": {
      "format_on_save": "off"
    }
  },
  "ui_font_family": ".ZedMono",
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "git_panel": {
    "dock": "right"
  },
  "theme": "One Dark",
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "git": {
    "git_gutter": "tracked_files"
  },
  "wrap_guides": [90],

  "buffer_font_size": 17,
  "vim_mode": true,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "vertical_scroll_margin": 999,
  "tab_bar": {
    "show": true
  },
  "preview_tabs": {
    "enabled": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "title_bar": {
    "show_onboarding_banner": false,
    "show_user_picture": false,
    "show_sign_in": false
  },
  "search": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "file_finder": {
    "file_icons": false,
    "skip_focus_for_active_in_search": false,
    "git_status": false
  },
  "status_bar": {
    "active_language_button": false,
    "cursor_position_button": false
  },
  // Only show error on tab
  "tabs": {
    "show_diagnostics": "errors"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "disable_ai": false,
  "agent": {
    "use_modifier_to_send": true,
    "play_sound_when_agent_done": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:7b"
    },
    "enabled": true,
    "enable_feedback": false
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434",
      "available_models": [
        {
          "name": "qwen2.5-coder",
          "display_name": "qwen 2.5 coder 7b",
          "max_tokens": 32768,
          "supports_tools": true,
          "supports_thinking": true,
          "supports_images": false
        }
      ]
    }
  }
}
