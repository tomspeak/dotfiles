{
  "title": "Vim-inspired keybindings for text editing",
  "rules": [
    {
      "description": "Vim navigation (hjkl) - excludes terminals",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.mitchellh\\.ghostty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
