{
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.fontFamily": "TX-02, 'Monaspace Neon Var',  Berkeley Mono, Cascadia Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 20,
  "editor.lineHeight": 1.5,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "telemetry.telemetryLevel": "off",
  "workbench.preferredLightColorTheme": "Quiet Light",
  "window.autoDetectColorScheme": true,
  "window.systemColorTheme": "auto",
  "workbench.startupEditor": "none",
  "editor.inlayHints.fontFamily": "Zed Mono",
  "update.showReleaseNotes": false,
  "workbench.sideBar.location": "right",
  "editor.wordWrap": "on",
  "vim.targets.enable": true,
  "editor.scrollbar.horizontal": "hidden",
  "editor.renderWhitespace": "none",
  "breadcrumbs.enabled": false,
  "terminal.external.osxExec": "Ghostty.app",
  "vim.leader": "<Space>",
  "vim.camelCaseMotion.enable": true,
  "vim.cursorStylePerMode.visualblock": "block-outline",
  "vim.cursorStylePerMode.visualline": "block-outline",
  "vim.enableNeovim": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.neovimPath": "/opt/homebrew/bin/nvim",
  "vim.smartRelativeLine": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["="],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    }
  ],
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "workbench.reduceMotion": "on",
  "breadcrumbs.symbolPath": "off",
  "editor.stickyScroll.enabled": false,
  "editor.stickyScroll.scrollWithEditor": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.colorTheme": "poimandres-noitalics",
  "zls.enable_inlay_hints": true,
  "zls.enable_snippets": true,
  "zls.warn_style": true,
  "editor.inlineSuggest.fontFamily": "'Zed Mono'",
  "debug.console.fontSize": 14,
  "editor.cursorStyle": "block",
  "workbench.iconTheme": null,
  "workbench.tips.enabled": false,
  "breadcrumbs.icons": false,
  "zig.zls.enabled": "on",
  "zig.path": "zig",
  "[zig]": {
    "editor.formatOnSave": true,
    "editor.suggest.insertMode": "replace",
    "editor.codeActionsOnSave": {
      // Run code actions that currently supports adding and removing discards.
      "source.fixAll": "explicit",
      // Run code actions that sorts @import declarations.
      "source.organizeImports": "explicit"
    }
  },
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "*.deprecated": {
        // highlight semantic tokens that are marked as "deprecated"
        "strikethrough": true
      }
    }
  },
  "terminal.integrated.fontSize": 16,
  "editor.overtypeCursorStyle": "line",
  "terminal.integrated.cursorStyleInactive": "line",
  "vim.cursorStylePerMode.insert": "line",
  "zig.zls.additionalOptions": {
    "zig.zls.enableAutofix": true, // Will set the "enable_autofix" config option
    "zig.zls.buildOnSaveStep": "check" // Will set the "build_on_save_step" config option
  },
  "extensions.ignoreRecommendations": true,
  "chat.agent.enabled": false,
  "chat.commandCenter.enabled": false,
  "chat.notifyWindowOnConfirmation": false,
  "telemetry.feedback.enabled": false,
  "telemetry.editStats.enabled": false,
  "workbench.settings.showAISearchToggle": false,
  "workbench.preferredDarkColorTheme": "Gruvbox Material Dark"
}
